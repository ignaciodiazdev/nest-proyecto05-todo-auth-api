generator client {
  provider     = "prisma-client"
  output       = "../src/generated/prisma"
  moduleFormat = "cjs"
}

datasource db {
  provider = "postgresql"
}

model User {
  id       String @id @default(uuid())
  email    String @unique
  name     String @db.VarChar(50)
  password String
  tasks    Task[]
}

model Task {
  id          String @id @default(uuid())
  description String @db.VarChar(100)
  user        User   @relation(fields: [userId], references: [id])
  userId      String
}
